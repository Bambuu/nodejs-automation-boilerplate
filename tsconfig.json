{
	"compilerOptions": {
		"outDir": "build/",
		"module": "commonjs",
		"experimentalDecorators": true,
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"./src/**/__tests__/*",
		"./src/**/*.test*"
	]
}
